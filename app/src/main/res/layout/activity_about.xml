<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.maiatoday.afrikaburn.ui.AboutActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/about_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla ante velit, pellentesque id augue eget, rutrum interdum massa. Curabitur orci turpis, vehicula eget nunc id, ullamcorper viverra tortor. Donec sit amet tincidunt dolor. Ut eget mauris ultrices, dignissim ligula eget, tincidunt dolor. Etiam eget diam quis arcu rhoncus accumsan sed sit amet erat. Sed et pulvinar lectus, id pharetra velit. Pellentesque vitae libero et nisi posuere malesuada. Vivamus in sapien malesuada, faucibus felis id, malesuada arcu. Mauris quis turpis tincidunt, aliquam turpis eu, accumsan nunc. Duis egestas egestas finibus. Etiam porttitor turpis a diam placerat, id ornare ante viverra. Nullam suscipit dignissim lorem vitae dapibus. Morbi blandit nisi vitae mattis mattis.

"
            tools:layout_constraintTop_creator="1"
            android:layout_marginStart="1dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="-67dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="66dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="66dp"
            android:layout_marginTop="24dp"
            android:text="Made with Love and Libraries and Github"
            android:textAlignment="center"
            app:layout_constraintLeft_toRightOf="@+id/imageView2"
            app:layout_constraintRight_toLeftOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_favorite_hot"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.52"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_favorite_hot"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            android:layout_marginStart="15dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/textView"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            android:layout_marginTop="0dp"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
